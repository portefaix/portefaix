// [Quickwit Local]

otelcol.exporter.otlp "local_quickwit_logs" {
  client {
    endpoint = {{ .Values.observability.logs.quickwit | quote }}

    tls {
      insecure = true
      insecure_skip_verify = true
    }
  }

  sending_queue {
    num_consumers = 30
    queue_size    = 300
  }

  retry_on_failure {
    initial_interval = "3s"
    max_elapsed_time = "2m0s"
  }
}

